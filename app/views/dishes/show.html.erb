<div class="page-header">
  <h3>Dish #<%= @dish.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>The very best</dt>
      <dd><%= @dish.the_very_best %></dd>

      <dt>Cusine</dt>
      <dd><%= @dish.cusine %></dd>

      <dt>Is at</dt>
      <dd><%= @dish.is_at %></dd>

