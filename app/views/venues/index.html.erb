<div class="page-header">
  <h1>
    Venues
    <a href="/venues/new" class="btn btn-lg btn-success">New Venue</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Locations</th>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td>
          <% if venue.locations.present? %>
            <a href="/locations/<%= venue.locations.id %>">
              <%= venue.locations.address %>
            </a>
          <% end %>
        </td>
        <td><%= venue.email %></td>
        <td><%= venue.password %></td>
        <td>
          <a href="/venues/<%= venue.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @venues, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
