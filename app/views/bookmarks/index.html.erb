<div class="page-header">
  <h1>
    Bookmarks
    <a href="/bookmarks/new" class="btn btn-lg btn-success">New Bookmark</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Dishes</th>
        <th>Venues</th>
        <th>User</th>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @bookmarks.each do |bookmark| %>
      <tr>
        <td>
          <% if bookmark.dishes.present? %>
            <a href="/dishes/<%= bookmark.dishes.id %>">
              <%= bookmark.dishes.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if bookmark.venues.present? %>
            <a href="/venues/<%= bookmark.venues.id %>">
              <%= bookmark.venues.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if bookmark.user.present? %>
            <a href="/users/<%= bookmark.user.id %>">
              <%= bookmark.user.name %>
            </a>
          <% end %>
        </td>
        <td><%= bookmark.email %></td>
        <td><%= bookmark.password %></td>
        <td>
          <a href="/bookmarks/<%= bookmark.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bookmarks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
